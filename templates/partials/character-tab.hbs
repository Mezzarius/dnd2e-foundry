<div class="character-details">
    <div class="attributes-section">
        <h2>Attributes</h2>
        <div class="attributes-grid">
            {{!-- Strength --}}
            <div class="attribute-block">
                <div class="attribute-fields">
                    <div class="attribute-main">
                        <label>Strength</label>
                        <input type="number" name="system.attributes.str.value" value="{{system.attributes.str.value}}"/>
                    </div>
                    <div class="attribute-exceptional">
                        <label>Exceptional</label>
                        <input type="number" name="system.attributes.str.exceptional" value="{{system.attributes.str.exceptional}}" placeholder="00"/>
                    </div>
                    <div class="attribute-modifiers">
                        <div class="modifier-field">
                            <label>Hit</label>
                            <input type="text" name="system.attributes.str.hitMod" value="{{system.attributes.str.hitMod}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Dmg</label>
                            <input type="text" name="system.attributes.str.dmgMod" value="{{system.attributes.str.dmgMod}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Wgt</label>
                            <input type="text" name="system.attributes.str.weight" value="{{system.attributes.str.weight}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Press</label>
                            <input type="text" name="system.attributes.str.press" value="{{system.attributes.str.press}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Doors</label>
                            <input type="text" name="system.attributes.str.doors" value="{{system.attributes.str.doors}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>BBLG</label>
                            <input type="text" name="system.attributes.str.bblg" value="{{system.attributes.str.bblg}}" disabled/>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Dexterity --}}
            <div class="attribute-block">
                <div class="attribute-fields">
                    <div class="attribute-main">
                        <label>Dexterity</label>
                        <input type="number" name="system.attributes.dex.value" value="{{system.attributes.dex.value}}"/>
                    </div>
                    <div class="attribute-modifiers">
                        <div class="modifier-field">
                            <label>React</label>
                            <input type="text" name="system.attributes.dex.reaction" value="{{system.attributes.dex.reaction}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Missile</label>
                            <input type="text" name="system.attributes.dex.missile" value="{{system.attributes.dex.missile}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Defense</label>
                            <input type="text" name="system.attributes.dex.defense" value="{{system.attributes.dex.defense}}" disabled/>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Constitution --}}
            <div class="attribute-block">
                <div class="attribute-fields">
                    <div class="attribute-main">
                        <label>Constitution</label>
                        <input type="number" name="system.attributes.con.value" value="{{system.attributes.con.value}}"/>
                    </div>
                    <div class="attribute-modifiers">
                        <div class="modifier-field">
                            <label>HP Adj</label>
                            <input type="text" name="system.attributes.con.hpAdj" value="{{system.attributes.con.hpAdj}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Shock</label>
                            <input type="text" name="system.attributes.con.shock" value="{{system.attributes.con.shock}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Res</label>
                            <input type="text" name="system.attributes.con.resurrect" value="{{system.attributes.con.resurrect}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Poison</label>
                            <input type="text" name="system.attributes.con.poison" value="{{system.attributes.con.poison}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Regen</label>
                            <input type="text" name="system.attributes.con.regen" value="{{system.attributes.con.regen}}" disabled/>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Intelligence --}}
            <div class="attribute-block">
                <div class="attribute-fields">
                    <div class="attribute-main">
                        <label>Intelligence</label>
                        <input type="number" name="system.attributes.int.value" value="{{system.attributes.int.value}}"/>
                    </div>
                    <div class="attribute-modifiers">
                        <div class="modifier-field">
                            <label>Profs</label>
                            <input type="text" name="system.attributes.int.languages" value="{{system.attributes.int.languages}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Max Lvl</label>
                            <input type="text" name="system.attributes.int.maxSpellLevel" value="{{system.attributes.int.maxSpellLevel}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Learn%</label>
                            <input type="text" name="system.attributes.int.learnSpell" value="{{system.attributes.int.learnSpell}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Max/Lvl</label>
                            <input type="text" name="system.attributes.int.maxSpellsPerLevel" value="{{system.attributes.int.maxSpellsPerLevel}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Bonus</label>
                            <input type="text" name="system.attributes.int.bonus" value="{{system.attributes.int.bonus}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Immune</label>
                            <input type="text" name="system.attributes.int.immunity" value="{{system.attributes.int.immunity}}" disabled/>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Wisdom --}}
            <div class="attribute-block">
                <div class="attribute-fields">
                    <div class="attribute-main">
                        <label>Wisdom</label>
                        <input type="number" name="system.attributes.wis.value" value="{{system.attributes.wis.value}}"/>
                    </div>
                    <div class="attribute-modifiers">
                        <div class="modifier-field">
                            <label>Mag Def</label>
                            <input type="text" name="system.attributes.wis.magicDefense" value="{{system.attributes.wis.magicDefense}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Bonus</label>
                            <input type="text" name="system.attributes.wis.bonusSpells" value="{{system.attributes.wis.bonusSpells}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Fail%</label>
                            <input type="text" name="system.attributes.wis.spellFail" value="{{system.attributes.wis.spellFail}}" disabled/>
                        </div>
                        <div class="modifier-field">
                            <label>Immune</label>
                            <input type="text" name="system.attributes.wis.immunity" value="{{system.attributes.wis.immunity}}" disabled/>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Charisma --}}
            <div class="attribute-block">
                <div class="attribute-fields">
                    <div class="attribute-main">
                        <label>Charisma</label>
                        <input type="number" name="system.attributes.cha.value" value="{{system.attributes.cha.value}}"/>
                    </div>
                    <div class="attribute-modifiers">
                        <div class="modifier-field">
                            <label>Hench</label>
